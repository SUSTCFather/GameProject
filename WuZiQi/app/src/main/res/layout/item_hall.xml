<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingTop="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/white_seat"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/white_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_mine_normal"
                android:layout_marginBottom="3dp"
                />

            <TextView
                android:id="@+id/white_name"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />
        </LinearLayout>


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_hall2"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:id="@+id/black_seat"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/black_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_mine_normal"
                android:layout_marginBottom="3dp"
                />

            <TextView
                android:id="@+id/black_name"
                android:layout_width="90dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorBlack"
                />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/hall_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:textSize="20sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorTopBar"
        />



</LinearLayout>